<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10px"
    android:orientation="vertical"
    tools:context="com.daniel.JoyRent.login.PersonalInfo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui_personaldata"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fanhui"
            android:onClick="fanhui_personaldata1"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="我的资料"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/alterPhoto"
        android:onClick="alterPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
      android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:text="修改头像 " />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
            android:src="@drawable/touxiang" />

        <ImageView
            android:id="@+id/changetouxiang1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/xiangyou" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#808080" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:text="昵称" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="登录后查看" />


        <ImageView
            android:id="@+id/changetouxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/xiangyou" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#808080" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:text="性别" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="登录后查看" />


        <ImageView
            android:id="@+id/changetouxiang2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/xiangyou" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#808080"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:text="手机号" />


        <TextView
            android:id="@+id/peisonal_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_weight="1"
          android:gravity="center_horizontal"
            android:text="登录后查看" />

        <ImageView
            android:id="@+id/changetouxiang232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/xiangyou" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#808080" />
    <LinearLayout
        android:id="@+id/ChangeDetail"
        android:onClick="ChangeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView22s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:text="修改资料" />
        <TextView
            android:id="@+id/peisonal_phone213"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="点击修改" />


        <ImageView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/xiangyou" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#808080" />
</LinearLayout>
